# Trading Signal API Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# API Settings
# =============================================================================
APP_NAME="Trading Signal API"
APP_VERSION="1.0.0"
DEBUG=false

# =============================================================================
# External API Settings
# =============================================================================
# CoinGecko API base URL (usually no need to change)
COINGECKO_BASE_URL="https://api.coingecko.com/api/v3"

# Optional: CoinGecko API key for higher rate limits
# Get one at: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=

# =============================================================================
# Cache Settings (in seconds)
# =============================================================================
# How long to cache OHLCV data (default: 5 minutes)
CACHE_TTL_OHLCV=300

# How long to cache current price (default: 1 minute)
CACHE_TTL_PRICE=60

# Maximum number of items in each cache
CACHE_MAX_SIZE=100

# =============================================================================
# Technical Indicator Settings
# =============================================================================
# RSI period (default: 14)
RSI_PERIOD=14

# MACD periods (default: 12, 26, 9)
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# EMA periods (default: 12, 26)
EMA_SHORT_PERIOD=12
EMA_LONG_PERIOD=26

# =============================================================================
# Signal Generation Settings
# =============================================================================
# RSI thresholds for overbought/oversold
RSI_OVERSOLD=30.0
RSI_OVERBOUGHT=70.0

# =============================================================================
# Data Fetching Settings
# =============================================================================
# Number of days of historical data to fetch
OHLCV_DAYS=90

# Request timeout in seconds
REQUEST_TIMEOUT=30
